<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container-fluid" "products_table">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-s-6 col-m-6 col-lg-4">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <h3><%= product.name %></h3>
        <p><%= product.description %><br>
        <%= product.price %></p>

        <div class="product_wrapper">
          <span><%= link_to 'Show', product, class: "btn btn-inverse product_button" %></span>
          <span><%= link_to 'Edit', edit_product_path(product), class: "btn btn-inverse product_button" %></span>
          <span><%= link_to 'Destroy', product, method: :delete, date: {confirm: 'Are you sure?' }, class: "btn btn-inverse product_button" %></span>
        </div> <!-- end wrapper-->
      </div> <!--col -->
    <% end %>
  </div> <!-- row-->
</div> <!-- container-fluid -->


<br>

<div class="product_wrapper">
  <%= link_to 'New Product', new_product_path, class: "btn btn-inverse product_button" %>
</div> <!--end wrapper -->
