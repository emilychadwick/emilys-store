<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
      <div class="caption">
        <h3><%= @product.name %></h3>
        <p><%= @product.description %></p>
        <p><%= @product.colour %> |
        <%= @product.price %></p>
        <p><%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-default edit-btns' %>  <%= link_to 'Back', products_path, class: 'btn btn-default edit-btns' %>
      </div>
    </div>
  </div>
</div>
